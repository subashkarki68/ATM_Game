<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Midnight_Blue"
    tools:context=".CharacterDetail_View_Controller">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:onClick="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_arrow" />

    <ImageView
        android:id="@+id/cdvl_image_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/character_detail_bg"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_char_female_5" />

    <TextView
        android:id="@+id/cdvl_char_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/Clouds"
        app:layout_constraintTop_toTopOf="@+id/cdvl_image_holder" />

    <TextView
        android:id="@+id/cdvl_name_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/play_bold"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/Clouds"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/cdvl_image_holder"
        app:layout_constraintStart_toStartOf="@+id/cdvl_image_holder"
        app:layout_constraintTop_toBottomOf="@+id/cdvl_image_holder" />

    <LinearLayout
        android:id="@+id/linearLayout_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cdvl_name_holder">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text="Bank Balance"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text="Status"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text="Country "
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text="Birth Year "
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text="Favourite Food "
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text="Favourite Game "
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cdvl_bank_balance_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text=":"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cdvl_status_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text=":"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cdvl_country_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text=":"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cdvl_birth_year_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text=":"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cdvl_favourite_food_value"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text=":"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/cdvl_favourite_game_value"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/play_regular"
                android:text=":"
                android:textAlignment="viewStart"
                android:textColor="@color/Clouds"
                android:textSize="20sp"
                app:autoSizeTextType="uniform" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>